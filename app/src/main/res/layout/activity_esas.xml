<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:scrollbars="none" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:alpha="1"
    android:background="#ffdab9"
    android:backgroundTintMode="screen">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".EsasActivity"
    android:alpha="30"
    android:baselineAligned="false">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:id="@+id/imageView"
            android:src="@drawable/em"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="AZƏRBAYCAN RESPUBLİKASI ƏRAZİSİNƏ İDXAL EDİLƏN YÜNGÜL MİNİK NƏQLİYYAT VASİTƏLƏRİNƏ ŞAMİL OLUNAN GÖMRÜK ÖDƏNİŞLƏRİNİN HESABLANMASI QAYDALARI\n (XİF MN-8703 qrupuna aid olanlar)"
            android:id="@+id/textView9"
            android:layout_gravity="center_horizontal"
            android:textColor="#ff4d0c0c"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:textAlignment="center"
            android:textSize="14dp"
            android:textIsSelectable="false"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Mənşə (istehsal) ölkəsi"
                android:id="@+id/textView"
                android:textColor="#ff4d0c0c" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/mCountry" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Göndərən ölkə"
                android:id="@+id/textView2"
                android:textColor="#ff4d0c0c" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/gCountry" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Avtomobilin gömrük dəyəri"
                android:id="@+id/textView3"
                android:textColor="#ff4d0c0c" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edUSDPrice"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:hint="USD"
                android:singleLine="true"
                android:inputType="numberDecimal"
                android:textColor="#b03060"
                android:textColorHint="#7d7ca8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Mühərrikin işçi həcmi"
                android:id="@+id/textView4"
                android:textColor="#ff4d0c0c" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edMuherrikHecmi"
                android:layout_marginTop="10dp"
                android:hint="kub.sm"
                android:singleLine="true"
                android:inputType="numberDecimal"
                android:textColor="#b03060"
                android:textColorHint="#7d7ca8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Avtomobilin statusu"
                android:id="@+id/textView5"
                android:textColor="#ff4d0c0c" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/tStatus"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Dolların məzənnəsi"
                android:id="@+id/textView6"
                android:textColor="#ff4d0c0c" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/valyuteRate"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:singleLine="true"
                android:inputType="numberDecimal"
                android:editable="false"
                android:enabled="true"
                android:textColor="#b03060"
                android:textColorHint="#8b7d7b" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hesabla"
                android:id="@+id/btnCalc"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.54"
                style="?android:attr/borderlessButtonStyle"
                android:enabled="false"
                android:textColor="#ffedf4ff"
                android:background="@drawable/btn"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:layout_marginTop="20dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
</ScrollView>