<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffdab9"
    android:scrollbars="none">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/em"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="Hesablamanın nəticəsi"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ff4d0c0c"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblPosition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="30dp"
            android:gravity="center|center_vertical|center_horizontal"
            android:includeFontPadding="false"
            android:inputType="textMultiLine"
            android:text="Large Text"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ff4d0c0c"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_row="0"
                android:gravity="left"
                android:singleLine="false"
                android:text="Aksiz vergisi :"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ff4d0c0c"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/lbAksiz"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp"
                android:layout_row="0"
                android:gravity="right"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#70477f"
                android:textSize="14dp" />
        </LinearLayout>
        <ImageView
            android:src="@drawable/img_repeat"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:paddingBottom="10dip"
            android:scaleType="fitXY" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_row="1"
                android:gravity="left"
                android:singleLine="false"
                android:text="Gömrük rüsumu :"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ff4d0c0c"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/lblTutulan"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp"
                android:layout_row="1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#70477f"
                android:textSize="14dp"
                android:gravity="right" />
        </LinearLayout>
        <ImageView
            android:src="@drawable/img_repeat"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:paddingBottom="10dip"
            android:scaleType="fitXY" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_row="2"
                android:singleLine="false"
                android:text="Əməliyyat haqqı :"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ff4d0c0c"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/lblEmeliyyatHaqqi"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp"
                android:layout_row="2"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#70477f"
                android:textSize="14dp"
                android:gravity="right" />
        </LinearLayout>
        <ImageView
            android:src="@drawable/img_repeat"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:paddingBottom="10dip"
            android:scaleType="fitXY" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_row="3"
                android:singleLine="false"
                android:text="Vəsiqə haqqı :"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ff4d0c0c"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/lblVesiqeHaqqi"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp"
                android:layout_row="3"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#70477f"
                android:textSize="14dp"
                android:gravity="right" />
        </LinearLayout>
        <ImageView
            android:src="@drawable/img_repeat"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:paddingBottom="10dip"
            android:scaleType="fitXY" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_row="4"
                android:singleLine="false"
                android:text="ƏDV :"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ff4d0c0c"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/lblEdv"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp"
                android:layout_row="4"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#70477f"
                android:textSize="14dp"
                android:gravity="right" />
        </LinearLayout>
        <ImageView
            android:src="@drawable/img_repeat"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:paddingBottom="10dip"
            android:scaleType="fitXY" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="0dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_row="5"
                android:singleLine="false"
                android:text="Cəmi"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ff4d0c0c"
                android:textSize="18dp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/lblTotal"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp"
                android:layout_row="5"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#70477f"
                android:textSize="14dp"
                android:gravity="right" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:id="@+id/imageView4"
                android:layout_gravity="bottom"
                android:src="@drawable/era_logo"
                android:layout_alignParentBottom="true"
                />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="© 2015"
                android:id="@+id/textView13"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.41"
                android:layout_marginTop="20dp"
                android:textColor="#3D0B0B"
                android:gravity="center|center_vertical"
                android:textSize="14sp"
                android:layout_marginBottom="5dp"
                android:layout_alignParentBottom="true"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>